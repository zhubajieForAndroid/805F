<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cheanda.a8805.activity.MaintainResultActivity">
    <ImageView
        android:id="@+id/result_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_marginLeft="14dp"
        android:layout_marginTop="190dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/left_one"
            android:src="@mipmap/number_green_zero"
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/left_two"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/number_green_zero"
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/left_three"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/number_green_zero"
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/left_four"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/number_green_zero"
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="190dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/right_one"
            android:src="@mipmap/number_green_zero"
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/right_two"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/number_green_zero"
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/right_three"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/number_green_zero"
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/right_four"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/number_green_zero"
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <include
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/view_state"/>
    <LinearLayout
        android:background="#f00"
        android:orientation="vertical"
        android:layout_width="500dp"
        android:layout_height="300dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
