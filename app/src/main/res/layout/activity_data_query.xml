<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_data_query"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cheanda.a8805.activity.DataQueryActivity">
    <ImageView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/display_btn"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="690dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topbar"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="426dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ListView
                    android:scrollbars="none"
                    android:id="@+id/listview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"/>
                <ProgressBar
                    android:layout_centerInParent="true"
                    style="?android:attr/progressBarStyleLargeInverse"
                    android:id="@+id/progress_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateBehavior="repeat"/>
            </RelativeLayout>
            <com.cheanda.a8805.views.SideBar
                android:background="#fff"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/sidrbar"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>
        <RelativeLayout
            android:layout_width="426dp"
            android:layout_height="match_parent">
            <ListView
                android:visibility="gone"
                android:id="@+id/listviewtype"
                android:layout_width="426dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"/>
            <ProgressBar
                android:visibility="gone"
                style="?android:attr/progressBarStyleLargeInverse"
                android:layout_centerInParent="true"
                android:id="@+id/progress_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateBehavior="repeat"/>
        </RelativeLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>
        <RelativeLayout
            android:layout_width="426dp"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/listviewyear"
                android:layout_width="426dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:visibility="gone"/>
            <ProgressBar
                android:visibility="gone"
                style="?android:attr/progressBarStyleLargeInverse"
                android:layout_centerInParent="true"
                android:id="@+id/progress_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateBehavior="repeat"/>
        </RelativeLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"/>

</RelativeLayout>
