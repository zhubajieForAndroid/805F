<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#33000000"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">
        <TextView
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:id="@id/band"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1.5"
            android:text="换油方式"/>

        <TextView
            android:textColor="#000"
            android:textSize="20sp"
            android:id="@+id/oil_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">
        <TextView
            android:id="@id/band"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1.5"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="原厂初装油量"/>

        <TextView
            android:textColor="#000"
            android:textSize="20sp"
            android:id="@+id/initoilmass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">
        <TextView
            android:id="@id/band"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1.5"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="重力换油用量"/>

        <TextView
            android:textColor="#000"
            android:textSize="20sp"
            android:id="@+id/gravityoilmass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">
        <TextView
            android:id="@id/band"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1.5"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="全自动换油用量"/>

        <TextView
            android:textColor="#000"
            android:textSize="20sp"
            android:id="@+id/loopoilmass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <!--接头型号-->
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/joint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1.5"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="接头型号"/>

        <TextView
            android:textSize="20sp"
            android:textColor="#21bfe7"
            android:id="@+id/joint_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <!--油品型号-->
    <LinearLayout
        android:gravity="center"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">
        <TextView
            android:id="@id/band"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1.5"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="油品型号"/>

        <TextView
            android:text="NONE"
            android:textSize="20sp"
            android:gravity="center|left"
            android:textColor="#21bfe7"
            android:id="@id/name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">
        <TextView
            android:id="@id/band"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1.5"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="油位检查方式"/>

        <TextView
            android:textColor="#000"
            android:textSize="20sp"
            android:id="@+id/oilcheckmode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <!--图片-->
    <LinearLayout
        android:gravity="center"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">
        <TextView
            android:id="@id/band"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="油位检查位置图片"/>
        <TextView
            android:textSize="20sp"
            android:gravity="center|left"
            android:id="@+id/oilimage1"
            android:textColor="#21bfe7"
            android:text="点击查看图片"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <!--图片-->
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">
        <TextView
            android:id="@id/band"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="#333333"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="换油接头拆装置图片"/>
        <TextView
            android:textSize="20sp"
            android:gravity="center|left"
            android:id="@+id/oilimage2"
            android:textColor="#21bfe7"
            android:text="点击查看图片"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">
        <TextView
            android:id="@id/band"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1.5"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="滤网型号"/>

        <TextView
            android:textSize="20sp"
            android:gravity="center|left"
            android:textColor="#21bfe7"
            android:id="@id/sievetype"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>