<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
        <!--电压-->
        <LinearLayout
            android:layout_marginLeft="190dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="50dp">
                <ImageView
                    android:id="@+id/shi"
                    android:layout_gravity="center"
                    android:src="@mipmap/number_green_zero"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/ge"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/number_green_zero"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/green_icon_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/fen"
                    android:layout_gravity="center"
                    android:src="@mipmap/number_green_zero"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <!--电流-->
        <LinearLayout
            android:layout_marginLeft="440dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="50dp">
                <ImageView
                    android:id="@+id/fen_a"
                    android:layout_gravity="center"
                    android:src="@mipmap/number_green_zero"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/ge_a"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/number_green_zero"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/green_icon_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/shi_a"
                    android:layout_gravity="center"
                    android:src="@mipmap/number_green_zero"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <!--车辆状态-->
        <LinearLayout
            android:layout_marginLeft="690dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="50dp">
                <TextView
                    android:id="@+id/tv_state"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="#00ff00"
                    android:text="熄火"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <!--油温-->
        <LinearLayout
            android:gravity="right"
            android:layout_marginLeft="910dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="50dp">
                <TextView
                    android:text="-"
                    android:layout_marginBottom="5dp"
                    android:textSize="40sp"
                    android:textColor="#0f0"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/fu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/shi_o"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/number_green_zero"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/fen_o"
                    android:layout_gravity="center"
                    android:src="@mipmap/number_green_zero"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginRight="5dp"
                    android:id="@+id/ge_o"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/number_green_zero"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <!--通讯状态-->
        <LinearLayout
            android:layout_marginLeft="1180dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="50dp">
                <TextView
                    android:id="@+id/tv_message_state"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="#ff0000"
                    android:text="异常"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
</RelativeLayout>